apiVersion: v1
kind: Namespace
metadata:
  name: wireguard
---
apiVersion: v1
kind: Secret
metadata:
  name: wireguard-config
  namespace: wireguard
type: Opaque
stringData:
  wg0.conf: |
    {{ wg_config }}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: wireguard-router
  namespace: wireguard
spec:
  replicas: 1
  selector:
    matchLabels:
      app: wireguard-router
  template:
    metadata:
      labels:
        app: wireguard-router
    spec:
      hostNetwork: true
      containers:
      - name: wireguard
        image: masipcat/wireguard-go:latest
        securityContext:
          privileged: true
          capabilities:
            add:
            - NET_ADMIN
            - NET_RAW
        volumeMounts:
        - name: wireguard-config
          mountPath: /etc/wireguard/
      volumes:
      - name: wireguard-config
        secret:
          secretName: wireguard-config
